<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasusVictuzMobile.MVVM.View.EventSuggestionPage"
             xmlns:local="clr-namespace:CasusVictuzMobile.MVVM.View"
             Title="EventSuggestionPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <VerticalStackLayout>

            <Label Text="Suggestie maken" FontSize="28" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
            <Label Text="Hier kan je evenement invullen om zelf te organiseren. Als een admin dit goedkeurt na een gesprek met jouw kan men zich hier voor inschrijven." TextColor="Black" FontSize="16" HorizontalOptions="Center"/>

            <!-- Separator -->
            <BoxView HeightRequest="1" 
             BackgroundColor="Black" 
             HorizontalOptions="Fill" 
             Margin="0,10"/>

            <Label Text="Naam evenement" FontSize="Body" FontAttributes="Bold" TextColor="Black" Margin="0,10,0,0" HorizontalOptions="Center"/>
            <Entry Placeholder="Geef je suggestie een naam" BackgroundColor="White" TextColor="Black" HorizontalOptions="Center"/>

            <Label Text="Beschrijving" FontSize="Body" FontAttributes="Bold" TextColor="Black" Margin="0,10,0,0" HorizontalOptions="Center"/>
            <Entry Placeholder="Geef je suggestie een beschrijving" BackgroundColor="White" TextColor="Black" HorizontalOptions="Center"/>

            <Label Text="Aantal leden" FontSize="Body" TextColor="Black" Margin="0,10,0,0" HorizontalOptions="Center"/>
            <Entry Placeholder="Geef je suggestie een aantal leden" BackgroundColor="White" TextColor="Black" Keyboard="Numeric" HorizontalOptions="Center"/>

            <Label Text="Gewilde datum" FontSize="Body" TextColor="Black" Margin="0,10,0,0" HorizontalOptions="Center"/>
            <DatePicker BackgroundColor="White" TextColor="Black" HorizontalOptions="Center"/>

            <Label Text="Gewilde starttijd" TextColor="Black" FontSize="Body" Margin="0,10,0,0" HorizontalOptions="Center"/>
            <TimePicker BackgroundColor="White" TextColor="Black" HorizontalOptions="Center"/>

            <Label Text="Url van afbeelding (niet verplicht)" TextColor="Black" FontSize="Body" Margin="0,10,0,0" HorizontalOptions="Center"/>
            <Entry Placeholder="Geef een url van een afbeelding" BackgroundColor="White" TextColor="Black" HorizontalOptions="Center"/>


            
        </VerticalStackLayout>
        <local:NavBar Grid.Row="1" />
    </Grid>
</ContentPage>