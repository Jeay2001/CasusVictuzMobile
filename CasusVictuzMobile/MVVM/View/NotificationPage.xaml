<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CasusVictuzMobile.MVVM.ViewModels"
             x:Class="CasusVictuzMobile.MVVM.Views.NotificationPage"
             BackgroundColor="#ffffff"
             Title="Meldingen">
    <ContentPage.BindingContext>
        <vm:NotificationViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Notifications Section -->
        <ScrollView Grid.Row="0" Padding="20">
            <VerticalStackLayout Spacing="15">
                <!-- Notification Template -->
                <CollectionView ItemsSource="{Binding Notifications}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10" Padding="10" BackgroundColor="#F5F5F5">
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="notification_icon.png" HeightRequest="50" WidthRequest="50" />
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                                        <Label Text="{Binding Message}" FontSize="16" TextColor="Gray" />
                                        <Label Text="{Binding Date, StringFormat='{0:dd MMMM yyyy}'}" FontSize="14" TextColor="Gray" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="1" HeightRequest="60" BackgroundColor="#0097b2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Evenementen Button -->
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="email.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Evenementen" FontSize="12" TextColor="White" HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Account Button -->
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="user.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Account" FontSize="12" TextColor="White" HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Meldingen Button -->
            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="calendar.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Meldingen" FontSize="12" TextColor="White" HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Inschrijvingen Button -->
            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="check.png" HeightRequest="30" WidthRequest="30" />
                <Label Text="Inschrijvingen" FontSize="12" TextColor="White" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
