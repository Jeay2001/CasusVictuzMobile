<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasusVictuzMobile.MainPage"
             BackgroundColor="#ffffff">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="10">
            <!-- Header -->
            <HorizontalStackLayout VerticalOptions="Start" Spacing="10">
                <Label Text="Evenementen" FontSize="28" FontAttributes="Bold" TextColor="Black" />
                <Image Source="sort.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="EndAndExpand" />
                <Image Source="filter.png" HeightRequest="30" WidthRequest="30" />
            </HorizontalStackLayout>

            <!-- Event Cards -->
            <ScrollView>
                <VerticalStackLayout Spacing="15">
                    <!-- Event 1 -->
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F5F5F5">
                        <VerticalStackLayout>
                            <Label Text="Evenement 1" FontSize="20" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Locatie: Utrecht" FontSize="16" TextColor="Gray" />
                            <Label Text="Datum: 20 januari 2025" FontSize="16" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Event 2 -->
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F5F5F5">
                        <VerticalStackLayout>
                            <Label Text="Evenement 2" FontSize="20" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Locatie: Amsterdam" FontSize="16" TextColor="Gray" />
                            <Label Text="Datum: 25 januari 2025" FontSize="16" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Event 3 -->
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F5F5F5">
                        <VerticalStackLayout>
                            <Label Text="Evenement 3" FontSize="20" FontAttributes="Bold" TextColor="Black" />
                            <Label Text="Locatie: Rotterdam" FontSize="16" TextColor="Gray" />
                            <Label Text="Datum: 30 januari 2025" FontSize="16" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>

        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="1" HeightRequest="60" BackgroundColor="#0097b2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Email Button -->
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="email.png" HeightRequest="30" WidthRequest="30" />
            </VerticalStackLayout>

            <!-- User Button -->
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="user.png" HeightRequest="30" WidthRequest="30" />
            </VerticalStackLayout>

            <!-- Meldingen Button -->
            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                <ImageButton Source="calendar.png"
                            HeightRequest="30"
                            WidthRequest="30"
                            Clicked="OnMeldingenButtonClicked" />
            </VerticalStackLayout>

            <!-- Check Button -->
            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="check.png" HeightRequest="30" WidthRequest="30" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
