<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CasusVictuzMobile.MVVM.ViewModels"
             x:Class="CasusVictuzMobile.MVVM.Views.NotificationPage"
             xmlns:local="clr-namespace:CasusVictuzMobile.MVVM.View"
             BackgroundColor="#ffffff"
             Title="Meldingen">
    <ContentPage.BindingContext>
        <vm:NotificationViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Notifications Section -->
        <ScrollView Grid.Row="0" Padding="20">
            <VerticalStackLayout Spacing="15">
                <!-- Notification Template -->
                <CollectionView ItemsSource="{Binding Notifications}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10" Padding="10" BackgroundColor="#F5F5F5">
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="notification_icon.png" HeightRequest="50" WidthRequest="50" />
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="Black" />
                                        <Label Text="{Binding Message}" FontSize="16" TextColor="Gray" />
                                        <Label Text="{Binding Date, StringFormat='{0:dd MMMM yyyy}'}" FontSize="14" TextColor="Gray" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <local:NavBar Grid.Row="1" />
    </Grid>
</ContentPage>
